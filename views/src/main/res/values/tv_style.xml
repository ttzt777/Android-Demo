<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Text.Summary">
        <item name="android:textColor">@color/text_summary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Tag">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:text">Gif</item>
        <item name="android:background">@drawable/shape_tag_bg</item>
        <item name="android:layout_margin">6dp</item>
    </style>

</resources>